<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Trust system certificates and user-installed certificates for debugging -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <!-- Trust preinstalled CAs -->
            <certificates src="system" />
            <!-- Trust user-added CAs (for debugging only) -->
            <certificates src="user" />
        </trust-anchors>
    </base-config>

    <!-- Production domain configuration -->
    <domain-config cleartextTrafficPermitted="false">
        <domain includeSubdomains="true">ciamlogin.com</domain>
        <domain includeSubdomains="true">login.microsoftonline.com</domain>
        <domain includeSubdomains="true">microsoft.com</domain>
        <domain includeSubdomains="true">microsoftonline.com</domain>
        <domain includeSubdomains="true">graph.microsoft.com</domain>
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </domain-config>
</network-security-config>
